<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
<class name="com.hibern.Employee" table="employee1">
<id name="id" column="eid"></id>
<property name="name" column="ename"></property>
<property name="department" column="department"></property>
<property name="designation" column="designation"></property>
<property name="age" column="age"></property>
<property name="gender" column="gender"></property>
<property name="salary"  column="salary"></property>

</class>
</hibernate-mapping>